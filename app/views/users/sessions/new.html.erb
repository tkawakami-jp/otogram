<% content_for :title, 'ログイン' %>

<div id="Login">
<div class="row">
<div class="medium-6 medium-centered columns">

  <h1>ログイン</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, class: 'radius', placeholder: 'email' %>
    <%= f.password_field :password, class: 'radius', placeholder: 'password' %>
    <%= f.check_box :remember_me, id:'remember_me', class: 'checkbox' %><label for="remember_me">保存する</label>
    <%= f.submit 'ログイン', class: 'button radius expand' %>

    <p><%= link_to "新規登録", new_registration_path(resource_name) %></p>
    <p><%= link_to "パスワードを忘れた", new_password_path(resource_name) %></p>
    <p><%= link_to "アカウントの有効化", new_confirmation_path(resource_name) %></p>
  <% end %>

</div>
</div>
</div>
