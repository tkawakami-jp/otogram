<% content_for :title, '友達招待' %>

<div id="Invite">
<div class="row">
<div class="medium-6 medium-centered columns">

<%= form_for (@invite) do |f| %>
  <% if @invite.errors.any? %>
    <div class="error_explanation">
      <ul><% @invite.errors.each do |attr, msg| %><li><%= msg %></li><% end %></ul>
    </div>
  <% end %>
  <%= f.email_field :email, class: 'radius', placeholder: 'メールアドレス' %>
  <%= f.submit '送信', class: 'button radius expand' %>
<% end %>

</div>
</div>
</div>
